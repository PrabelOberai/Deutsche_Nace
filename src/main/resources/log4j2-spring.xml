<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d [%t] %-5level %logger{1.} - %msg%n%throwable" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- LOG everything at INFO level -->
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>